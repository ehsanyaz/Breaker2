<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_whole_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    >

    <RelativeLayout
        android:id="@+id/menu_inner_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/splash_background"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu_score_layout"
            android:layout_marginBottom="30dp"
            >

            <TextView
                android:id="@+id/menu_high_Score_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/high_Score"
                android:layout_marginRight="0dp"/>

            <TextView
                android:id="@+id/menu_high_Score_Score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0" />
        </RelativeLayout>

        <Button
            android:id="@+id/menu_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/start_btn"
            android:text="@string/game_start"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:id="@+id/menu_amar_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/amar_icon" />

        <ImageView
            android:id="@+id/menu_help_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/help_icon" />

        <ImageView
            android:id="@+id/menu_setting_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_icon" />

    </RelativeLayout>


</RelativeLayout>
